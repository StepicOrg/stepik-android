        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="StepikTheme.Onboarding">
        <item name="android:windowBackground">@drawable/onboarding_background</item>
    </style>


    <style name="AppTheme.PhotoView">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="StepikTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="StepikTheme.LoginLaunchRegistration" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@color/login_launch_registration_background</item>
        <item name="android:colorBackground">@color/login_launch_registration_background</item>
        <item name="android:textColor">@color/text_color</item>
