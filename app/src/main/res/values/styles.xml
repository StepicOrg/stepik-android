        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@color/login_button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginButtons" parent="StepikButtonStyleBase">
        <item name="android:layout_width">@dimen/auth_elements_width</item>
        <item name="android:textSize">@dimen/launch_button_text_size</item>
    </style>

    <style name="LoginEditFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/new_accent_color</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="BorderLessTextButton">
        <item name="android:textSize">@dimen/borderless_text_button_text_size</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="TryAgainButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/launchTextColor</item>
    </style>

    <style name="CourseWidgetView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/course_item_button_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/min_ux_touchable_size</item>
        <item name="android:clickable">true</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
