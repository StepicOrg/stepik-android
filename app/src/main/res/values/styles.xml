        <item name="android:background">@drawable/new_button_selector</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomSheetShareItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/share_item_padding</item>
        <item name="android:padding">@dimen/share_item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
    </style>

    <style name="PlaceholderTextViewStyle">
        <item name="android:textSize">@dimen/text_size_placeholders</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/stepic_weak_text</item>
    </style>
    
    <style name="PlaceholderButton">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/placeholder_button_background_selector</item>
        <item name="android:foreground">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/new_accent_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/guideline_standard_padding</item>
    </style>

    <style name="previousNextTextViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="SettingHeaderTextView">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingLeft">@dimen/guideline_standard_padding</item>
        <item name="android:paddingRight">@dimen/guideline_standard_padding</item>
        <item name="android:paddingTop">@dimen/guideline_standard_padding</item>
    </style>

    <style name="SettingCardStyle">
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin</item>
    </style>

    <style name="SettingCompoundButton">
        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:layout_marginLeft">@dimen/guideline_standard_padding</item>
        <item name="android:paddingBottom">@dimen/guideline_standard_padding</item>
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:paddingTop">@dimen/guideline_standard_padding</item>
        <item name="android:paddingRight">@dimen/guideline_standard_padding</item>
