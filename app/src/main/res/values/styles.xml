    <style name="AppTheme" parent="AppTheme.15" />

    <style name="AppTheme.15" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
