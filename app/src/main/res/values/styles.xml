<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/stepic_brand_primary_dark</item>
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
        <item name="android:windowBackground">@color/stepic_cover</item>
        <item name="android:colorBackground">@color/stepic_cover</item>
        <item name="android:textColor">@color/stepic_regular_text</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:actionBarStyle">@style/StepicActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/StepicButton</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.BrandedLaunch">
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="android:windowBackground">@drawable/branded_logo</item>

    </style>

    <style name="AppTheme.VideoPlayer" parent="AppTheme.VideoPlayer.7"/>

    <style name="AppTheme.VideoPlayer.7" parent="Theme.AppCompat">
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/transparent_black_30</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/stepic_brand_primary</item>
        <item name="colorPrimaryDark">@color/stepic_brand_primary_dark</item>
        <item name="colorAccent">@color/stepic_blue_ribbon</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>

    <style name="StepicButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:foreground">@drawable/non_radius_foreground</item>
        <item name="android:background">@drawable/btn_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="fontPath">fonts/NotoSans-Bold.ttf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/min_ux_touchable_size</item>
    </style>

    <style name="StepicSmallMaterialButton" parent="Theme.AppCompat.Light">
        <item name="android:minHeight">@dimen/height_of_small_button</item>
        <item name="android:maxHeight">@dimen/height_of_small_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_color_selector_accent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomSheetShareItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/share_item_padding</item>
        <item name="android:padding">@dimen/share_item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">@drawable/non_radius_foreground</item>
    </style>

    <style name="PlaceholderTextViewStyle">
        <item name="android:textSize">@dimen/text_size_placeholders</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_placeholders</item>
        <item name="android:textColor">@color/stepic_weak_text</item>
    </style>


</resources>
