        <item name="android:textSize">@dimen/course_item_property_text_size</item>
        <item name="android:layout_marginLeft">@dimen/course_item_property_text_image_margin</item>
        <item name="android:layout_marginRight">@dimen/course_item_property_between_items_margin</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
