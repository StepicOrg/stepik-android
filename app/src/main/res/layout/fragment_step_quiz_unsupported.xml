<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stepQuizFeedback"
        style="@style/StepQuizFeedback"

        android:background="@drawable/bg_step_quiz_feedback_evaluation"
        android:text="@string/step_quiz_unsupported_message"
        android:textColor="@color/color_violet_1"

        android:layout_margin="16dp"

        tools:drawableStart="@drawable/ic_step_quiz_validation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stepQuizAction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_submit_button_height"
        android:background="@drawable/bg_step_submit_button"

        android:padding="12dp"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:text="@string/step_quiz_unsupported_action"
        android:textSize="16sp"
        android:textColor="@color/color_step_submit_button_text"
        android:gravity="center" />

</android.support.v7.widget.LinearLayoutCompat>