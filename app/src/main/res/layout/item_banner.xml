<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/course_list_side_padding"
    android:layout_marginBottom="20dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="106dp"
        android:background="@drawable/bg_shape_rounded"
        tools:background="">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bannerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/color_on_surface"
            android:textSize="18sp"
            app:fontFamily="@font/stories_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bannerImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Зарабатывайте\nна своих знаниях" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bannerDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/color_control_normal"
            app:fontFamily="@font/stories_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bannerImage"
            app:layout_constraintTop_toBottomOf="@id/bannerTitle"
            tools:text="Создавайте курсы для 5 000 000 пользователей" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_banner_violet" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

