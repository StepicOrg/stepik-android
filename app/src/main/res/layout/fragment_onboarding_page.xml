<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AnimatedOnboardingActivity">

    <TextView
        android:id="@+id/onboardingPageAction"
        style="@style/Onboarding.Action"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/onboardingPageSubtitle"
        style="@style/Onboarding.Subtitle"
        android:layout_above="@id/onboardingPageAction"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/onboardingPageTitle"
        style="@style/Onboarding.Title"
        android:layout_above="@id/onboardingPageSubtitle" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/onboardingAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/onboardingPageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/onboarding_top_margin"
        android:layout_marginLeft="@dimen/onboarding_side_margin"
        android:layout_marginRight="@dimen/onboarding_side_margin" />
</RelativeLayout>