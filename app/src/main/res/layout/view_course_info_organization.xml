<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_course_info_instructors"
            app:tint="?colorOnSurface"
            android:alpha="?alphaEmphasisHigh"
            android:layout_gravity="start|center_vertical" />

        <TextView
            android:id="@+id/organizationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/course_info_block_text_margin"
            android:layout_marginLeft="@dimen/course_info_block_text_margin"

            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"

            android:textAppearance="?textAppearanceBody1" />
    </FrameLayout>

    <include layout="@layout/view_divider_vertical" />

</androidx.appcompat.widget.LinearLayoutCompat>
