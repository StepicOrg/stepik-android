<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/courseListTitleContainer"
    android:background="?selectableItemBackground"
    android:paddingTop="@dimen/course_carousel_title_top_padding"
    android:paddingBottom="@dimen/course_carousel_title_top_padding"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/courseListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/course_list_side_padding"
        android:layout_marginStart="@dimen/course_list_side_padding"
        android:layout_toLeftOf="@+id/coursesViewAll"
        android:layout_toStartOf="@+id/coursesViewAll"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="@dimen/course_carousel_title_bottom_padding"
        android:textAppearance="?textAppearanceSubtitle1"
        android:visibility="visible"
        tools:ignore="MissingPrefix"
        tools:text="@string/my_courses_title"/>

    <TextView
        android:id="@+id/coursesCarouselCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/courseListTitle"
        android:layout_alignStart="@id/courseListTitle"
        android:layout_below="@id/courseListTitle"
        android:ellipsize="end"
        android:lines="1"
        android:padding="0dp"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary"
        android:visibility="gone"
        tools:ignore="MissingPrefix"
        tools:text="10 courses"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coursesViewAll"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        app:tint="?colorControlNormal"
        app:srcCompat="@drawable/ic_arrow_forward"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/courseListDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/coursesCarouselCount"
        android:layout_alignStart="@id/coursesCarouselCount"
        android:layout_below="@id/coursesCarouselCount"
        android:ellipsize="end"
        android:lines="3"
        android:padding="0dp"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary"
        android:visibility="visible"
        tools:ignore="MissingPrefix"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries"/>

</RelativeLayout>