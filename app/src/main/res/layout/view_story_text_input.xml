<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="210dp"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/storyFeedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/stories"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="We need\nyour feedback"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/storyFeedbackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_story_feedback_dark"/>
    
    <org.stepik.android.view.base.ui.widget.StoriesClearFocusEditText
        android:id="@+id/storyFeedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        android:gravity="top|start"
        android:textSize="16sp"
        android:focusableInTouchMode="true"
        tools:hint="Type your feedback..." />

</androidx.constraintlayout.widget.ConstraintLayout>