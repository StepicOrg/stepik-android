<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_step_discussion_button">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stepDiscussionsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"

        android:gravity="center"
        android:layout_gravity="center"

        android:textColor="@color/new_accent_color"
        android:textSize="16sp"
        android:drawablePadding="16dp"

        tools:drawableStart="@drawable/ic_step_discussion"
        tools:text="Открыть комментарии (1)" />

</FrameLayout>