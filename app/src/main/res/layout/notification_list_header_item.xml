<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/mark_all_as_read_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="?materialButtonOutlinedStyle"
        android:theme="@style/ThemeOverlay.Violet"
        android:layout_gravity="center"
        android:layout_margin="@dimen/guideline_standard_padding"
        android:text="@string/mark_all_as_read"/>

    <include
        android:id="@+id/grey_bar"
        layout="@layout/view_divider_vertical"/>
</LinearLayout>