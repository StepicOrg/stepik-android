<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:foreground="@color/transparent"
    android:paddingBottom="@dimen/guide_top_bot_padding"
    android:paddingEnd="@dimen/guideline_left_right_padding_list_item"
    android:paddingLeft="@dimen/guideline_left_right_padding_list_item"
    android:paddingRight="@dimen/guideline_left_right_padding_list_item"
    android:paddingStart="@dimen/guideline_left_right_padding_list_item"
    android:paddingTop="@dimen/guide_top_bot_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/root_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="@dimen/card_corner_radius_guideline"

        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="@dimen/padding_bot_top_cv"
        app:contentPaddingLeft="@dimen/padding_text_in_cv"
        app:contentPaddingRight="@dimen/padding_text_in_cv"
        app:contentPaddingTop="@dimen/padding_bot_top_cv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_property_title"
                style="@style/cv_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_text_in_cv"
                android:text="@string/summary" />

            <org.stepic.droid.view.custom.ExpandableTextView
                android:id="@+id/course_property_text_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text, text" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>