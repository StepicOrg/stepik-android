<LinearLayout
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:id="@+id/comment_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14.06.2016 10:30"/>
    <ImageView
        android:layout_marginLeft="4dp"

        android:id="@+id/reply_icon_view"
        android:layout_toRightOf="@+id/comment_time_tv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_image_comment_state"
        android:src="@drawable/ic_reply_material_24px"
        />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/reply_icon_view"
        android:layout_toLeftOf="@+id/pinned_indicator"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/like_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/like_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_image_comment_state"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_thumb_up_white_24dp"
        />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        tools:text="131"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/pinned_indicator"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:src="@drawable/ic_pinned"
        android:layout_width="wrap_content"
        android:layout_height="16dp"/>


</RelativeLayout>


<TextView

android:id="@+id/user_role"
android:layout_marginRight="4dp"
android:paddingTop="4dp"
android:paddingBottom="4dp"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
tools:text="Stepic.org team"
    />
</LinearLayout>