<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/course_info_block_margin">

    <org.stepic.droid.ui.custom.LoadingView
        android:id="@+id/blockTitle"
        android:layout_width="0dp"
        android:layout_height="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="@dimen/course_info_block_margin"
        android:layout_marginStart="@dimen/course_info_block_margin"
        android:layout_marginLeft="@dimen/course_info_block_margin"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_max="320dp" />

    <org.stepic.droid.ui.custom.LoadingView
        android:layout_width="0dp"
        android:layout_height="8dp"

        android:layout_marginTop="@dimen/course_info_block_margin"
        android:layout_marginStart="@dimen/course_info_block_margin"
        android:layout_marginLeft="@dimen/course_info_block_margin"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blockTitle"

        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_max="180dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintWidth_default="percent" />

</android.support.constraint.ConstraintLayout>